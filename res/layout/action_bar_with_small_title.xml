<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/fillet_shape_background_for_actionbar_with_vivid_green_and_bottom_shadow" >

    <ImageView
        android:id="@+id/actionbar_imageView_back_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:background="@drawable/fillet_shape_action_button_background_with_alph"
        android:padding="15dp"
        android:src="@drawable/icon_back_white" />

    <TextView
        android:id="@+id/actionbar_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fillet_shape_action_button_background_with_alph"
        android:padding="20dp"
        android:textColor="#ffffffff" />

    <LinearLayout
        android:id="@+id/linearLayout_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/fillet_shape_action_button_background_with_alph"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/actionbar_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="标题"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/actionbar_textView_small_title_icon"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/fillet_shape_background_for_list_item_circle_orange" />

            <TextView
                android:id="@+id/actionbar_textView_small_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="小标题"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/actionbar_progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp" />

</RelativeLayout>