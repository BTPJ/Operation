<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout_for_parkinglot_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativeLayout_parkinglot_code"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_parkinglot_code"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/linearLayout_parkinglot_code"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:background="#ff5a5a5a" />

                <TextView
                    android:id="@+id/textview_parkinglot_edit_step1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fillet_shape_background_for_list_item_circle_blue"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffffff" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_parkinglot_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_parkinglot_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="车位编号"
                    android:textColor="#ff7a7a7a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_parkinglot_code_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="B17130013"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativeLayout_parkinglot_sensors"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_parkinglot_sensors"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/linearLayout_parkinglot_sensors"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:background="#ff5a5a5a" />

                <TextView
                    android:id="@+id/textview_parkinglot_edit_step2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/fillet_shape_background_for_list_item_circle_blue"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffffff" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_parkinglot_sensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_parkinglot_sensors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="车位节点"
                    android:textColor="#ff7a7a7a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/textView_parkinglot_sensors_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView_sensor_code_status"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/fillet_shape_background_for_list_item_circle_green"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#ffffffff" />

                        <EditText
                            android:id="@+id/editText_sensor_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:editable="false"
                            android:hint="请将手机后背贴近节点表面以获取NFC标签"
                            android:textColor="#ff007361"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView_sensor1_code_status"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/fillet_shape_background_for_list_item_circle_green"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#ffffffff" />

                        <EditText
                            android:id="@+id/editText_sensor1_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@null"
                            android:editable="false"
                            android:hint="请将手机后背贴近节点表面以获取NFC标签"
                            android:textColor="#ff007361"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativeLayout_parkinglot_edit_submit"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_parkinglot_edit_submit_button"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/linearLayout_parkinglot_edit_submit_button"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:background="#ff5a5a5a" />

                <TextView
                    android:id="@+id/textview_parkinglot_edit_step3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/fillet_shape_background_for_list_item_circle_blue"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#ffffffff" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_parkinglot_edit_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_parkinglot_edit_submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="60dp"
                    android:background="#ff74b2e0"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativeLayout_parkinglot_delete_submit"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_parkinglot_edit_delete_button"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/linearLayout_parkinglot_edit_delete_button"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:background="#ff5a5a5a" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_parkinglot_edit_delete_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_parkinglot_edit_delete_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#ff7a7a7a"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativeLayout_parkinglot_null"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/linearLayout_parkinglot_edit_null"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/linearLayout_parkinglot_edit_null"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="19dp"
                    android:background="#ff5a5a5a" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_parkinglot_edit_null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>