<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewAddParkingLotsActivity" >

    <include
        android:id="@+id/include_header"
        layout="@layout/action_bar_with_blue_background_small_title" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_header"
        android:layout_marginTop="20dp" >

        <android.support.v4.view.PagerTitleStrip
            android:id="@+id/pagertitle"
            android:layout_width="wrap_content"
            android:layout_height="20dp" >
        </android.support.v4.view.PagerTitleStrip>
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/textView_add_parkinglot_botton_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include_header"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/icon_left_button"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView_add_parkinglot_botton_right"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include_header"
        android:layout_marginRight="8dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/icon_right_button"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView_parkinglot_code_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include_header"
        android:layout_marginRight="72dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/fillet_shape_button_with_alph_orange_1"
        android:padding="8dp"
        android:text="扫描"
        android:textColor="#ffffffff" />

</RelativeLayout>