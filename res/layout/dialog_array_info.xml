<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayout_array_info">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_marginLeft="16dp"
            android:id="@+id/textView_array_code"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#77000000"
            android:layout_below="@+id/textView_array_code"
            android:id="@+id/textView_line"
         />

    </RelativeLayout>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_array_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:id="@+id/radioGroup_array_status">
        <!--默认选中b1-->
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="畅通"
            android:textColor="#497145"
            android:id="@+id/b1"
            />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="缓行"
            android:textColor="#ffc4780d"
            android:id="@+id/b2"
            />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="阻塞"
            android:textColor="#ffc82536"
            android:id="@+id/b3"
            />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="取消"
        android:id="@+id/textView_cancel_button"
        android:layout_below="@+id/radioGroup_array_status"
        android:layout_alignRight="@+id/radioGroup_array_status"
        android:layout_alignEnd="@+id/radioGroup_array_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:text="提交"
        android:id="@+id/textView_submit_button"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:paddingRight="18dp"
        android:paddingLeft="18dp"
        android:gravity="center"
        android:textColor="#ff70a24c"
        android:layout_below="@+id/radioGroup_array_status"
        android:layout_toLeftOf="@+id/textView_cancel_button"
        android:layout_toStartOf="@+id/textView_cancel_button"/>

</RelativeLayout>