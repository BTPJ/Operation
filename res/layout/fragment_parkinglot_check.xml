<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout_for_parkinglot_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_parkinglot_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="车位编号"
            android:textColor="#ff7a7a7a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_parkinglot_code_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/parkinglot_edit_bg"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="1713022" />

        <TextView
            android:id="@+id/textView_has_sensors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="拥有节点"
            android:textColor="#ff7a7a7a"
            android:textSize="14sp" />

        <ListView
            android:id="@+id/listView_sensors"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/parkinglot_edit_bg"
            android:divider="@null"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/textView_parkinglot_creat_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="创建时间"
            android:textColor="#ff7a7a7a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_parkinglot_creat_at_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/parkinglot_edit_bg"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="2013-09-23 23:29:09" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>

</ScrollView>