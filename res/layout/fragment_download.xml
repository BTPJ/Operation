<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fillet_shape_background_with_white_corner_size_4"
    android:padding="16dp"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/textview_download_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/textview_download_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ProgressBar
        android:id="@+id/progressBar_download"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_marginTop="8dp"
        android:progressDrawable="@drawable/cus_view_background_progressbar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/textview_download_message"
        android:max="100" />

</RelativeLayout>