<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsSetupDynamicBasestationActivity" >

    <include
        android:id="@+id/include_header"
        layout="@layout/action_bar_with_blue_background" />

    <ScrollView
        android:id="@+id/scrollView_for_basestation_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_header" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_dynamic_basestation_new_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="基站编号："
                android:textColor="#ff7a7a7a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_dynamic_basestation_new_code_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:maxLength="10"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/textView_dynamic_basestation_equipmentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="设备ID"
                android:textColor="#ff7a7a7a"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/textView_dynamic_basestation_equipmentId_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:hint="不修改"
                android:maxLength="4"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />
            
            <TextView
                android:id="@+id/textView_dynamic_basestation_panid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="基站PANID"
                android:textColor="#ff7a7a7a"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/textView_dynamic_basestation_panid_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:hint="不修改"
                android:maxLength="4"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/textView_dynamic_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="基站类型"
                android:textColor="#ff7a7a7a"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_dynamic_type_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/textView_dynamic_time_src"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="配时源"
                android:textColor="#ff7a7a7a"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner_dynamic_time_src_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/textView_dynamic_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="目标服务器"
                android:textColor="#ff7a7a7a"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_dynamic_service_ip"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="IP：" />

                    <EditText
                        android:id="@+id/textView_dynamic_service_ip_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="不修改"
                        android:inputType="number|text"
                        android:maxLength="15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView_dynamic_service_port"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:text="端口：" />

                    <EditText
                        android:id="@+id/textView_dynamic_service_port_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="不修改"
                        android:inputType="number"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textView_dynamic_basestation_frequency_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="基站频点"
                    android:textColor="#ff7a7a7a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_dynamic_basestation_frequency_point_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="不修改"
                    android:textColor="#ff00ac73"
                    android:textSize="14sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar_dynamic_basestation_frequency_point_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:max="32"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textView_dynamic_basestation_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="占用百分比"
                    android:textColor="#ff7a7a7a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_dynamic_basestation_percentage_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="不修改"
                    android:textColor="#ff00ac73"
                    android:textSize="14sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar_dynamic_basestation_frequency_percentage_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:max="63"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/textView_dynamic_basestation_time_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="判断时间周期"
                    android:textColor="#ff7a7a7a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_dynamic_basestation_time_period_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="不修改"
                    android:textColor="#ff00ac73"
                    android:textSize="14sp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBar_dynamic_basestation_time_period_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fillet_shape_background_for_list_item_with_top_and_bottom_line"
                android:max="767"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/textView_dynamic_basestation_submit_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/fillet_shape_button_with_alph_green"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>